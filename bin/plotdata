use strict;
my $fh;
open($fh, "> data/raw.dat") or die "Could not open raw.dat";

my $addr = (shift || 0x20000000);
my $count = (shift || 8192);
my $bytes = $count*2;

my $jprog = "/usr/local/bin/nrfjprog";

my @buffer = `$jprog -f nRF52 --memrd $addr --w 16 --n $bytes;`;
system("$jprog -f nRF52 --run");
my @data;

foreach(@buffer){
  my @line = split(/\s+/);
  shift(@line);
  foreach my $i (0..7){
	my $hex = $line[$i];
	my $dec = hex($hex);
#	$dec -= 65536 if $dec >= 32768;
	print $fh $dec."\n";
  }
}
close($fh);
